# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_MODE=debug

# Timezone (usado para agendamento de notificações)
# O sistema usa horário de Brasília (America/Sao_Paulo) por padrão
# Defina TZ no ambiente se necessário: export TZ=America/Sao_Paulo
# Em containers Docker, já está configurado no Dockerfile

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=notification_db
DB_SSLMODE=disable

# VAPID Keys (para Web Push Notifications)
# Gere usando: /api/v1/integration/vapid/generate
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@example.com

# Data Relay (Mailman - envio de emails)
DATA_RELAY_API_URL=https://data-relay.dados.rio/
DATA_RELAY_API_TOKEN=your_data_relay_token_here

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/
RABBITMQ_QUEUE_NOTIFICATIONS=notifications
RABBITMQ_WORKERS=3